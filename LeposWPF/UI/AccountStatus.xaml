<Controls:MetroWindow x:Class="LeposWPF.UI.AccountStatus"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:fa="http://schemas.fontawesome.io/icons/"
                      xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:sys="clr-namespace:System;assembly=mscorlib"
                      xmlns:toolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input.Toolkit"
                      xmlns:vsm="clr-namespace:System.Windows;assembly=WPFToolkit"
                      Title="Estado de cuenta"
                      Width="1150"
                      Height="768"
                      FontSize="16"
                      FontWeight="Bold"
                      WindowStartupLocation="CenterOwner"
                      Loaded="MetroWindow_Loaded"
                      WindowState="Maximized"
                      >
    <Window.Resources>
        <VisualBrush x:Key="SearchHint"
              Stretch="None">
            <VisualBrush.Visual>
                <TextBox
                  BorderThickness="0"
                  Foreground="Gray"
                  Width="{Binding ElementName=saleIDTextBox, Path=ActualWidth}"
                  Height="{Binding ElementName=saleIDTextBox, Path=ActualHeight}"
                  Text="Ingresar ID" />
            </VisualBrush.Visual>
        </VisualBrush>

    </Window.Resources>
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
        <Grid.RowDefinitions>
            <RowDefinition Height="14*" />
            <RowDefinition Height="76*"/>
            <RowDefinition Height="10*" />
        </Grid.RowDefinitions>
        <Viewbox HorizontalAlignment="Left">
            <Border HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Margin="2,0,2,0" Grid.Row="0" Grid.ColumnSpan="2" BorderBrush="Gray" BorderThickness="0,0,0,0">
                <GroupBox Header="Filtrar estado de cuenta"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Grid Name="groupBoxGrid"  HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"></ColumnDefinition>
                            <ColumnDefinition Width="3*"></ColumnDefinition>
                            <ColumnDefinition Width="3*"></ColumnDefinition>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <Image Name="logoImage"
                               Grid.Column="3"
                               Grid.RowSpan="2"
                               Margin="20"
                               Height="80"
                               ToolTip="Logo" 
                               Source="/Lepos;component/LocalResources/default_logo.png" />
                        <StackPanel Grid.Row="0" Grid.ColumnSpan="3" Orientation="Vertical">
                            <StackPanel Margin="10,0,0,0" Orientation="Horizontal">
                                <TextBox  Name="saleIDTextBox" Height="30"  Width="100">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Style.Triggers>
                                                <Trigger Property="Text"
                                                      Value="">     
                                                      <Setter Property="Background"
                                                            Value="{StaticResource SearchHint}" />
                                                </Trigger>
                                                <Trigger Property="IsKeyboardFocused"
                                                         Value="True">
                                                         <Setter Property="Background"
                                                                 Value="White" />
                                                </Trigger>
                                            </Style.Triggers>
                                            <Setter Property="VerticalAlignment" Value="Bottom" />
                                        </Style>
                                    </TextBox.Style>

                                </TextBox>
                                <Button Name="saleIDButton" Click="saleIDButton_Click" Margin="10,0,0,0">
                                    <StackPanel Orientation="Horizontal">
                                        <fa:ImageAwesome Style="{StaticResource styleImageAwesome}" Icon="Search" />
                                        <fa:FontAwesome Style="{StaticResource styleFontAwesome}" Text="Filtrar por ID" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                                <Label Foreground="Gray">Inicio -</Label>
                                <DatePicker Focusable="False"  Margin="10,0,0,0" Name="purchasesStartDatePicker"></DatePicker>
                                <Label Margin="10,0,0,0" Foreground="Gray">Fin -</Label>
                                <Button Name="filterButton" Click="filterButton_Click" Margin="10,0,0,0">
                                    <StackPanel Orientation="Horizontal">
                                        <fa:ImageAwesome Style="{StaticResource styleImageAwesome}" Icon="Search" />
                                        <fa:FontAwesome Style="{StaticResource styleFontAwesome}" Text="Filtrar" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                        <TextBlock Margin="6,10,6,0" Grid.Column="1" Grid.Row="1" Background="Yellow" Foreground="Gray">Fecha próxima de pago</TextBlock>
                        <TextBlock Margin="6,10,6,0" Grid.Column="2" Grid.Row="1" Background="Red" Foreground="Black" >Fecha expirada de pago</TextBlock>
                    </Grid>
                </GroupBox>
            </Border>
        </Viewbox>
        <Viewbox ScrollViewer.HorizontalScrollBarVisibility="Auto" Name="dataGridContainerViewBox" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Stretch" >
            <Border BorderBrush="Gray" BorderThickness="0,2,0,2">
                <ScrollViewer 
                                  HorizontalScrollBarVisibility="Auto"
                                  VerticalScrollBarVisibility="Auto">
                    <DataGrid Name="debtsDataGrid"
                                      Margin="6,0,6,0"
                                      MaxColumnWidth="200"
                                      HorizontalAlignment="Stretch"
                                      VerticalAlignment="Stretch">
                    </DataGrid>
                </ScrollViewer>
            </Border>
        </Viewbox>
        <Viewbox Name="salesViewBox" HorizontalAlignment="Left" Grid.Row="2" >
            <Border Margin="2,2,2,2" BorderBrush="Gray" BorderThickness="0 0 0 0">
                <TextBlock Name="debtTextBlock" HorizontalAlignment="Stretch" FontSize="28" TextWrapping="Wrap" Foreground="Gray">Adeudo : $25,000.00</TextBlock>
            </Border>
        </Viewbox>
    </Grid>
</Controls:MetroWindow>